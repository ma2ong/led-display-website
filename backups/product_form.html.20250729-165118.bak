<!DOCTYPE html>
{% extends "base.html" %}

{% block title %}{{ 'Add' if action == 'add' else 'Edit' }} Product - LED Display Admin{% endblock %}
{% block page_title %}{{ 'Add New' if action == 'add' else 'Edit' }} Product{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    {{ 'Add New Product' if action == 'add' else 'Edit Product' }}
                </h6>
            </div>
            <div class="card-body">
                <form method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name_en" class="form-label">Product Name (English) *</label>
                                <input type="text" class="form-control" id="name_en" name="name_en" 
                                       value="{{ product.name_en if product else '' }}" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name_zh" class="form-label">Product Name (Chinese) *</label>
                                <input type="text" class="form-control" id="name_zh" name="name_zh" 
                                       value="{{ product.name_zh if product else '' }}" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="category" class="form-label">Category *</label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="">Select Category</option>
                                    <option value="fine-pitch" {{ 'selected' if product and product.category == 'fine-pitch' else '' }}>Fine Pitch</option>
                                    <option value="outdoor" {{ 'selected' if product and product.category == 'outdoor' else '' }}>Outdoor</option>
                                    <option value="indoor" {{ 'selected' if product and product.category == 'indoor' else '' }}>Indoor</option>
                                    <option value="transparent" {{ 'selected' if product and product.category == 'transparent' else '' }}>Transparent</option>
                                    <option value="creative" {{ 'selected' if product and product.category == 'creative' else '' }}>Creative</option>
                                    <option value="rental" {{ 'selected' if product and product.category == 'rental' else '' }}>Rental</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="status" class="form-label">Status *</label>
                                <select class="form-select" id="status" name="status" required>
                                    <option value="active" {{ 'selected' if product and product.status == 'active' else '' }}>Active</option>
                                    <option value="inactive" {{ 'selected' if product and product.status == 'inactive' else '' }}>Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="description_en" class="form-label">Description (English)</label>
                                <textarea class="form-control" id="description_en" name="description_en" rows="4">{{ product.description_en if product else '' }}</textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="description_zh" class="form-label">Description (Chinese)</label>
                                <textarea class="form-control" id="description_zh" name="description_zh" rows="4">{{ product.description_zh if product else '' }}</textarea>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="specifications" class="form-label">Specifications</label>
                        <textarea class="form-control" id="specifications" name="specifications" rows="4" 
                                  placeholder="Enter specifications, one per line">{{ product.specifications if product else '' }}</textarea>
                        <div class="form-text">Enter each specification on a new line</div>
                    </div>

                    <div class="mb-3">
                        <label for="features" class="form-label">Features</label>
                        <input type="text" class="form-control" id="features" name="features" 
                               value="{{ product.features if product else '' }}" 
                               placeholder="Enter features separated by commas">
                        <div class="form-text">Separate features with commas</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="product_image" class="form-label">Product Image</label>
                                <input type="file" class="form-control" id="product_image" name="product_image" accept="image/*">
                                <div class="form-text">Upload a new image (optional)</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="price" class="form-label">Price (Optional)</label>
                                <input type="number" class="form-control" id="price" name="price" step="0.01" 
                                       value="{{ product.price if product and product.price else '' }}">
                                <div class="form-text">Leave empty if price is not public</div>
                            </div>
                        </div>
                    </div>

                    {% if product and product.images %}
                    <div class="mb-3">
                        <label class="form-label">Current Image</label>
                        <div>
                            <img src="../{{ product.images }}" alt="{{ product.name_en }}" 
                                 class="img-thumbnail" style="max-width: 200px;">
                        </div>
                        <input type="hidden" name="images" value="{{ product.images }}">
                    </div>
                    {% endif %}

                    <div class="d-flex justify-content-between">
                        <a href="{{ url_for('products') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Products
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>{{ 'Add Product' if action == 'add' else 'Update Product' }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Tips</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        Fill both English and Chinese names for better SEO
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-image text-info me-2"></i>
                        Recommended image size: 1200x800px
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-list text-info me-2"></i>
                        Use clear, concise specifications
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-tags text-info me-2"></i>
                        Features help customers find products
                    </li>
                </ul>
            </div>
        </div>

        <div class="card shadow mt-3">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Category Guide</h6>
            </div>
            <div class="card-body">
                <small>
                    <strong>Fine Pitch:</strong> P0.9-P1.56, indoor high-res<br>
                    <strong>Outdoor:</strong> P3-P10, weather-resistant<br>
                    <strong>Indoor:</strong> P1.25-P4, general indoor use<br>
                    <strong>Transparent:</strong> See-through displays<br>
                    <strong>Creative:</strong> Custom shapes<br>
                    <strong>Rental:</strong> Portable, quick setup
                </small>
            </div>
        </div>
    </div>
</div>
{% endblock %}