<!DOCTYPE html>
{% extends "base.html" %}

{% block title %}Inquiries - LED Display Admin{% endblock %}
{% block page_title %}Customer Inquiries{% endblock %}

{% block content %}
<div class="card shadow">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Customer Inquiries</h6>
    </div>
    <div class="card-body">
        {% if inquiries_list %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Customer</th>
                            <th>Contact</th>
                            <th>Product Interest</th>
                            <th>Message</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for inquiry in inquiries_list %}
                        <tr>
                            <td>{{ inquiry.id }}</td>
                            <td>
                                <div>
                                    <strong>{{ inquiry.name }}</strong>
                                    {% if inquiry.company %}
                                        <br><small class="text-muted">{{ inquiry.company }}</small>
                                    {% endif %}
                                </div>
                            </td>
                            <td>
                                <div>
                                    <i class="fas fa-envelope me-1"></i>{{ inquiry.email }}
                                    {% if inquiry.phone %}
                                        <br><i class="fas fa-phone me-1"></i>{{ inquiry.phone }}
                                    {% endif %}
                                </div>
                            </td>
                            <td>{{ inquiry.product_interest or 'General Inquiry' }}</td>
                            <td>
                                <div style="max-width: 200px;">
                                    {{ inquiry.message[:100] }}{% if inquiry.message|length > 100 %}...{% endif %}
                                </div>
                            </td>
                            <td>
                                {% if inquiry.status == 'new' %}
                                    <span class="badge bg-warning">New</span>
                                {% elif inquiry.status == 'handled' %}
                                    <span class="badge bg-success">Handled</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ inquiry.status }}</span>
                                {% endif %}
                            </td>
                            <td>{{ inquiry.created_at[:16] }}</td>
                            <td>
                                {% if inquiry.status == 'new' %}
                                <form method="POST" action="{{ url_for('handle_inquiry', id=inquiry.id) }}" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-success" title="Mark as Handled">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </form>
                                {% endif %}
                                <button class="btn btn-sm btn-info" onclick="viewInquiry({{ inquiry.id }})" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-envelope fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No inquiries found</h5>
                <p class="text-muted">Customer inquiries will appear here when submitted through the website.</p>
            </div>
        {% endif %}
    </div>
</div>

<!-- Inquiry Details Modal -->
<div class="modal fade" id="inquiryModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Inquiry Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="inquiryDetails">
                <!-- Details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
function viewInquiry(id) {
    // Find the inquiry data from the table
    const row = document.querySelector(`tr:has(td:first-child:contains('${id}'))`);
    if (!row) return;
    
    const cells = row.querySelectorAll('td');
    const details = `
        <div class="row">
            <div class="col-md-6">
                <h6>Customer Information</h6>
                <p><strong>Name:</strong> ${cells[1].querySelector('strong').textContent}</p>
                <p><strong>Company:</strong> ${cells[1].querySelector('small')?.textContent || 'N/A'}</p>
                <p><strong>Email:</strong> ${cells[2].textContent.split('\n')[0].replace('âœ‰', '').trim()}</p>
                <p><strong>Phone:</strong> ${cells[2].textContent.includes('ðŸ“ž') ? cells[2].textContent.split('\n')[1].replace('ðŸ“ž', '').trim() : 'N/A'}</p>
            </div>
            <div class="col-md-6">
                <h6>Inquiry Details</h6>
                <p><strong>Product Interest:</strong> ${cells[3].textContent}</p>
                <p><strong>Status:</strong> ${cells[5].textContent}</p>
                <p><strong>Date:</strong> ${cells[6].textContent}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h6>Message</h6>
                <div class="border p-3 bg-light">
                    ${cells[4].textContent}
                </div>
            </div>
        </div>
    `;
    
    document.getElementById('inquiryDetails').innerHTML = details;
    new bootstrap.Modal(document.getElementById('inquiryModal')).show();
}
</script>
{% endblock %}