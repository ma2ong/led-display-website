<!DOCTYPE html>
{% extends "base.html" %}

{% block title %}产品预览 - {{ product.name_en }} - LED显示屏管理后台{% endblock %}
{% block page_title %}产品预览{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">产品预览</h4>
        <p class="text-muted">查看产品在前端网站的显示效果</p>
    </div>
    <div class="btn-group">
        <a href="{{ url_for('products') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>返回产品列表
        </a>
        <a href="{{ url_for('edit_product', id=product.id) }}" class="btn btn-primary">
            <i class="fas fa-edit me-2"></i>编辑产品
        </a>
        <a href="http://localhost:8000#products" target="_blank" class="btn btn-success">
            <i class="fas fa-external-link-alt me-2"></i>在前端查看
        </a>
    </div>
</div>

<div class="row">
    <!-- 前端效果预览 -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-eye me-2"></i>
                    前端显示效果预览
                </h5>
            </div>
            <div class="card-body">
                <!-- 模拟前端产品卡片样式 -->
                <div class="product-preview-card">
                    <style>
                        .product-preview-card {
                            max-width: 400px;
                            margin: 0 auto;
                            border: 1px solid #e0e0e0;
                            border-radius: 12px;
                            overflow: hidden;
                            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
                            transition: transform 0.3s ease;
                        }
                        .product-preview-card:hover {
                            transform: translateY(-5px);
                        }
                        .preview-image {
                            width: 100%;
                            height: 250px;
                            object-fit: cover;
                            background: #f8f9fa;
                        }
                        .preview-content {
                            padding: 1.5rem;
                        }
                        .preview-title {
                            font-size: 1.25rem;
                            font-weight: 600;
                            color: #333;
                            margin-bottom: 0.5rem;
                        }
                        .preview-description {
                            color: #666;
                            font-size: 0.9rem;
                            line-height: 1.5;
                            margin-bottom: 1rem;
                        }
                        .preview-features {
                            list-style: none;
                            padding: 0;
                            margin-bottom: 1rem;
                        }
                        .preview-features li {
                            padding: 0.25rem 0;
                            font-size: 0.85rem;
                            color: #555;
                        }
                        .preview-features li:before {
                            content: "✓";
                            color: #28a745;
                            font-weight: bold;
                            margin-right: 0.5rem;
                        }
                        .preview-btn {
                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                            color: white;
                            padding: 0.5rem 1rem;
                            border: none;
                            border-radius: 6px;
                            font-size: 0.85rem;
                            text-decoration: none;
                            display: inline-block;
                            transition: all 0.3s;
                        }
                        .preview-btn:hover {
                            color: white;
                            transform: translateY(-1px);
                        }
                    </style>
                    
                    <div class="preview-image-container">
                        {% if product.images %}
                            <img src="{{ url_for('static', filename='uploads/products/' + product.images.split('/')[-1]) if product.images.startswith('assets/') else product.images }}" 
                                 alt="{{ product.name_en }}" class="preview-image"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="preview-image d-none align-items-center justify-content-center bg-light">
                                <div class="text-center">
                                    <i class="fas fa-image fa-3x text-muted mb-2"></i>
                                    <div class="text-muted">{{ product.name_en }}</div>
                                </div>
                            </div>
                        {% else %}
                            <div class="preview-image d-flex align-items-center justify-content-center bg-light">
                                <div class="text-center">
                                    <i class="fas fa-image fa-3x text-muted mb-2"></i>
                                    <div class="text-muted">{{ product.name_en }}</div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="preview-content">
                        <h3 class="preview-title">{{ product.name_en }}</h3>
                        <p class="preview-description">{{ product.description_en or '暂无描述' }}</p>
                        
                        {% if product.features %}
                        <ul class="preview-features">
                            {% for feature in product.features.split('\n')[:3] %}
                                {% if feature.strip() %}
                                <li>{{ feature.strip() }}</li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                        {% endif %}
                        
                        <a href="#" class="preview-btn">Learn More</a>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <p class="text-muted small">
                        <i class="fas fa-info-circle me-1"></i>
                        这是产品在前端网站中的显示效果预览
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- 产品详细信息 -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    产品详细信息
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>产品ID:</strong> {{ product.id }}
                </div>
                <div class="mb-3">
                    <strong>英文名称:</strong><br>
                    {{ product.name_en }}
                </div>
                <div class="mb-3">
                    <strong>中文名称:</strong><br>
                    {{ product.name_zh }}
                </div>
                <div class="mb-3">
                    <strong>产品分类:</strong><br>
                    <span class="badge bg-secondary">
                        {% if product.category == 'fine-pitch' %}小间距LED
                        {% elif product.category == 'outdoor' %}户外LED
                        {% elif product.category == 'indoor' %}室内LED
                        {% elif product.category == 'transparent' %}透明LED
                        {% elif product.category == 'creative' %}创意LED
                        {% elif product.category == 'rental' %}租赁LED
                        {% else %}{{ product.category }}
                        {% endif %}
                    </span>
                </div>
                {% if product.price %}
                <div class="mb-3">
                    <strong>价格:</strong><br>
                    ${{ "%.2f"|format(product.price) }}
                </div>
                {% endif %}
                <div class="mb-3">
                    <strong>状态:</strong><br>
                    <span class="badge bg-{{ 'success' if product.status == 'active' else 'secondary' }}">
                        {{ '活跃' if product.status == 'active' else '停用' }}
                    </span>
                </div>
                <div class="mb-3">
                    <strong>创建时间:</strong><br>
                    {{ product.created_at }}
                </div>
                
                <hr>
                
                <div class="d-grid gap-2">
                    <a href="http://localhost:8000#{{ product.category }}" target="_blank" class="btn btn-success btn-sm">
                        <i class="fas fa-external-link-alt me-2"></i>
                        在前端网站查看
                    </a>
                    <a href="{{ url_for('edit_product', id=product.id) }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit me-2"></i>
                        编辑此产品
                    </a>
                </div>
            </div>
        </div>
        
        {% if product.specifications %}
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">技术规格</h6>
            </div>
            <div class="card-body">
                <pre class="small">{{ product.specifications }}</pre>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}