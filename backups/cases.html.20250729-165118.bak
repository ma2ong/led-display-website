<!DOCTYPE html>
{% extends "base.html" %}

{% block title %}案例管理 - LED显示屏管理后台{% endblock %}
{% block page_title %}案例管理{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">成功案例列表</h4>
        <p class="text-muted">管理LED显示屏项目案例</p>
    </div>
    <button type="button" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>添加案例
    </button>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>案例图片</th>
                        <th>项目名称</th>
                        <th>分类</th>
                        <th>客户</th>
                        <th>地点</th>
                        <th>项目日期</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    {% for case in cases_list %}
                    <tr>
                        <td>{{ case.id }}</td>
                        <td>
                            {% if case.images %}
                                <img src="{{ case.images.split(',')[0] }}" alt="{{ case.title_en }}" 
                                     class="img-thumbnail" style="width: 60px; height: 45px; object-fit: cover;">
                            {% else %}
                                <div class="bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 45px;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            {% endif %}
                        </td>
                        <td>
                            <div class="fw-bold">{{ case.title_en }}</div>
                            <small class="text-muted">{{ case.title_zh }}</small>
                        </td>
                        <td>
                            {% if case.category %}
                                <span class="badge bg-secondary">{{ case.category }}</span>
                            {% else %}
                                <span class="text-muted">未分类</span>
                            {% endif %}
                        </td>
                        <td>{{ case.client or '未知' }}</td>
                        <td>{{ case.location or '未知' }}</td>
                        <td>{{ case.project_date or '未知' }}</td>
                        <td>
                            <span class="badge bg-{{ 'success' if case.status == 'published' else 'secondary' }}">
                                {{ '已发布' if case.status == 'published' else '草稿' }}
                            </span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <div>暂无案例数据</div>
                            <button type="button" class="btn btn-primary btn-sm mt-2">
                                添加第一个案例
                            </button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}